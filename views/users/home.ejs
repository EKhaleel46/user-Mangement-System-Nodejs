<% include('../layouts/header.ejs') %>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap');
    * {
        margin: 0;
        padding: 0;
        font-family: 'poppins', sans-serif;
    }

    section {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        width: 100%;
        background-image: url(/assets//IMG_9781\ 2.jpg);
        background-position: center;
        background-size: cover;
    }

    h2 {
        font-size: 2em;
        color: #fff;
        text-align: center;
    }

    table {
        width: 350px;
        height: 200px;
        border-collapse: collapse;
        margin-top: 70px;
    }

    th,
    td {
        border: 1.5px solid #fff;
        padding: 10px;
        text-align: center;
        color: #fff;
    }

    .forget {
        margin: -15px 0 15px;
        font-size: .9em;
        color: #fff;
        display: flex;
        justify-content: space-between;
    }

    button {
        width: 100%;
        height: 40px;
        border-radius: 40px;
        background: #000000;
        border: none;
        outline: none;
        cursor: pointer;
        font-size: 1em;
        font-weight: 600;
        margin-top: 70px;
    }

    .message{
        font-size: .9em;
        color: #fff;
        text-align: center;
        margin: 25px 0 10px;
    }

    .message {
        font-size: .9em;
        color: #fff;
        text-align: center;
        margin: 25px 0 10px;
    }

    .message h3 {
        text-decoration: none;
        color: #cb5c5c;
        font-weight: 600;
    }

    .logout {
        text-decoration: none;
        color: rgb(255, 255, 255);
    }
</style>


<section>
    <div class="tablediv">
        <h1>Welcome <%= user.name %></h1>
        <div class="form-value">
            <table class="table">
                <tr>
                    <td>Name</td>
                    <td><%= user.name %></td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><%= user.email %></td>
                </tr>
                <tr>
                    <td>Phone</td>
                    <td><%= user.mobile %></td>
                </tr>     
            </table>
        </div>
        <button><a class="logout" href="/logout">Logout</a></button>
    </div>
</section>

