<% include('../layouts/header.ejs') %>


<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap');
    * {
        margin: 0;
        padding: 0;
        font-family: 'poppins', sans-serif;
    }

    section{
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        width: 100%;
        background-image: url(/assets//IMG_9781\ 2.jpg);
        background-position: center;
        background-size: cover;
    }

    .container {
        width: 500px;
        margin: 50px auto;
        padding: 20px;
        background-color: rgb(0, 0, 0, 0.66);
        border-radius: 20px;
        backdrop-filter: blur(15px);
        color: #fff;
    }

    h1 {
        text-align: center;
    }

    .add-user-form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .form-group {
        margin: 15px 0;
        width: 100%;
    }

    input[type="name"],
    input[type="email"],
    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        font-size: 1em;
        margin-top: 5px;
        border: 1px solid #fff;
        background: transparent;
        color: #fff;
        border-radius: 5px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        background: #fff;
        border: none;
        cursor: pointer;
        font-size: 1em;
        font-weight: 600;
        border-radius: 5px;
    }

    .message {
        text-align: center;
        margin-top: 15px;
    }

    .message h3 {
        color: #cb5c5c;
        font-weight: 600;
    }

    .dashboard-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #fff;
        text-decoration: none;
        font-size: 1.2em;
    }
</style>



<section>
    <div class="container">
        <h1>Add New User</h1>

        <form action="" method="post" class="add-user-form">
            <div class="form-group">
                <input type="name" name="name" placeholder="Enter name" required>
            </div>

            <div class="form-group">
                <input type="email" name="email" placeholder="Enter email" required>
            </div>

            <div class="form-group">
                <input type="text" name="mobile" placeholder="Enter number" required>
            </div>

            <div class="form-group">
                <input type="password" name="password" placeholder="Enter password" required>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary">
            </div>

            <div class="message">
                <h3><%= locals.message %></h3>
            </div>
        </form>

        <a href="/admin" class="dashboard-link">Go Dashboard</a>
    </div>
</section>

<% include('../layouts/footer.ejs') %>
